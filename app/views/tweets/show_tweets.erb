<label><%= @tweet.content %></label>

<form method="get" action="/tweets/<%=@tweet.id%>/edit">
  <input type="submit" name="edit_tweet" value="Edit Tweet">
</form>

  <form method="post" action="/tweets/<%=@tweet.id%>/delete">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" name="delete_tweet" value="Delete Tweet">
</form>
